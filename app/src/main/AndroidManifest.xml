<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ibdtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IBDTracker">
        <activity
            android:name=".Misc.AddReminderActivity"
            android:exported="false" />
        <activity
            android:name=".Misc.MiscActivity"
            android:exported="false" />
        <activity
            android:name=".WeightEntryActivity"
            android:exported="false" />
        <activity
            android:name=".Colitis.ColitisSurveyActivity"
            android:exported="false" />
        <activity
            android:name=".Crohns.CrohnsSurveyActivity"
            android:exported="false" />
        <activity
            android:name=".Crohns.CrohnsDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".Colitis.ColitisDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".AppSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".SelectorActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".Misc.AlarmReceiver" android:enabled="true" android:exported="false" android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>